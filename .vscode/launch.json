    "version": "0.2.0",
    "configurations": [
        {
            "name": "Macos Special Launch via npm",
            "runtimeVersion": "16.9", // If i need to run node 4.8.7
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "special",
                "--",
                "--open"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Launch via npm: run dev -- --open",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev",
                "--",
                "--open"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Special Version Launch via npm: run dev -- --open",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "special",
                "--",
                "--open"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}